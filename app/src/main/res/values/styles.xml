<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="create_game_created_letter">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@color/orange</item>
        <item name="android:textSize">48sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="keyboard_key_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="keyboard_big_key_style" parent="keyboard_key_style">
        <item name="android:minWidth">48dp</item>
    </style>
</resources>